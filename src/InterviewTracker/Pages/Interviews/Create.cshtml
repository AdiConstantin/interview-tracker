@page
@model InterviewTracker.Pages.Interviews.CreateModel
@{
    ViewData["Title"] = "New Interview";
}
<h2>New Interview</h2>
<form method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Application</label>
        <select asp-for="ApplicationId" asp-items="Model.ApplicationOptions" class="form-select"></select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Type</label>
        <select asp-for="Type" asp-items="Model.TypeOptions" class="form-select"></select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Stage</label>
        <select asp-for="Stage" asp-items="Model.StageOptions" class="form-select"></select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Date</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Duration (min)</label>
        <input asp-for="DurationMin" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Outcome</label>
        <input asp-for="Outcome" class="form-control" />
    </div>
    <div class="col-12">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Interviews" class="btn btn-link">Cancel</a>
    </div>
</form>

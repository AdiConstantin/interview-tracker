@page "{id:guid}"
@model InterviewTracker.Pages.Applications.EditModel
@{
    ViewData["Title"] = "Edit Application";
    var isInactive = Model.Application?.Company?.IsInactive ?? false;
}
<h2>Edit Application</h2>
<form method="post" class="row g-3">
    <input type="hidden" asp-for="Application.Id" />
    <div class="col-md-6 @(isInactive ? "inactive-company" : "")">
        <label class="form-label">Company Name</label>
        <input asp-for="Application.Company.Name" class="form-control" />
    </div>
    <div class="col-md-6 @(isInactive ? "inactive-company" : "")">
        <label class="form-label">Company Location</label>
        <input asp-for="Application.Company.Location" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Role</label>
        <input asp-for="Application.Role" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Seniority</label>
        <input asp-for="Application.Seniority" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Source</label>
        <input asp-for="Application.Source" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Salary Expectation</label>
        <input asp-for="Application.SalaryExpectation" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Inactive Company</label>
        <div class="form-check form-switch">
            <input asp-for="Application.Company.IsInactive" class="form-check-input" type="checkbox" role="switch" id="isInactiveSwitch" />
            <label class="form-check-label" for="isInactiveSwitch" title="Process is closed for future interviews, company is not in focus">
                Mark company as inactive
            </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Applications" class="btn btn-link">Cancel</a>
    </div>
</form>
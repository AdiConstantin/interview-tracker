@page
@model InterviewTracker.Pages.Applications.IndexModel
@{
    ViewData["Title"] = "Applications";
}
<link rel="stylesheet" href="~/css/site.css" />
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Applications</h2>
    <a href="/Applications/Create" class="btn btn-success">+ New Application</a>
</div>
<form method="get" class="mb-3">
    <label>
        <input type="checkbox" name="obfuscate" value="true" @(Model.Obfuscate ? "checked" : "") onchange="this.form.submit()" />
        Obfuscate sensitive data
    </label>
</form>
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Company</th>
            <th>Role</th>
            <th>Status</th>
            <th>Salary</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model.Applications)
        {
            var isInactive = app.Company?.IsInactive ?? false;
            <tr class="@(isInactive ? "inactive-company" : "")">
                <td>
                    @(Model.Obfuscate ? "Company #" + app.Id : app.Company?.Name)
                </td>
                <td>
                    @(Model.Obfuscate ? "Role #" + app.Id : $"{app.Role} ({app.Seniority})")
                </td>
                <td>@app.Status</td>
                <td>
                    @(Model.Obfuscate ? "****" : app.SalaryExpectation)
                </td>
                @* <td>@app.CreatedAt.ToString("g")</td> *@
                <td>
                    <a href="/Applications/Edit/@app.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
